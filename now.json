{
    "version": 2,
    "functions": {
        "api/**/*.js": {
          "memory": 3008,
          "maxDuration": 60,
          "includeFiles": "api/_data/*.json"
        }
    },
  "env": {
    "MONGO_URL": "@staging.glider-ota.mongo.uri2",
    "MONGO_DBNAME": "@staging.glider-ota.mongo.dbname",
    "REDIS_HOST": "@staging.glider-ota.redis.host",
    "REDIS_PASSWORD": "@staging.glider-ota.redis.password",
    "STRIPE_PUBLISHABLE_KEY": "@staging.glider-ota.stripe.publishable_key",
    "STRIPE_SECRET_KEY": "@staging.glider-ota.stripe.secret_key",
    "STRIPE_WEBHOOK_SECRET": "@staging.glider-ota.stripe.webhook_secret",
    "STRIPE_BYPASS_WEBHOOK_SIGNATURE_CHECK": "@staging.glider-ota.stripe.bypass_webhook",
    "ELASTIC_URL": "@staging.glider-ota.elastic.url",
    "GLIDER_JWT": "@staging.glider-ota.glider_jwt",
    "SIMARD_JWT": "@staging.glider-ota.simard_jwt",
    "GLIDER_ORGID": "@staging.glider-ota.glider-b2b_orgid",
    "INFURA_ENDPOINT": "@staging.glider-ota.infura_endpoint",

    "PRODUCTION_MONGO_URL": "@production.glider-ota.mongo.uri",
    "PRODUCTION_MONGO_DBNAME": "@production.glider-ota.mongo.dbname",
    "PRODUCTION_REDIS_HOST": "@production.glider-ota.redis.host",
    "PRODUCTION_REDIS_PORT": "@production.glider-ota.redis.port",
    "PRODUCTION_REDIS_PASSWORD": "@production.glider-ota.redis.password",
    "PRODUCTION_STRIPE_PUBLISHABLE_KEY": "@production.glider-ota.stripe.publishable_key",
    "PRODUCTION_STRIPE_SECRET_KEY": "@production.glider-ota.stripe.secret_key",
    "PRODUCTION_STRIPE_WEBHOOK_SECRET": "@production.glider-ota.stripe.webhook_secret",
    "PRODUCTION_ELASTIC_URL": "@production.glider-ota.elastic.url",
    "PRODUCTION_GLIDER_JWT": "@production.glider-ota.glider_jwt",
    "PRODUCTION_SIMARD_JWT": "@production.glider-ota.simard_jwt",
    "PRODUCTION_GLIDER_ORGID": "@production.glider-ota.glider-b2b_orgid",
    "STAGING_SENDGRID_API_KEY": "@staging.glider-ota.sendgrid_api_key",
    "PRODUCTION_SENDGRID_API_KEY": "@production.glider-ota.sendgrid_api_key",
    "STAGING_SENDGRID_FROM_EMAIL_ADDR": "@staging.glider-ota.sendgrid_from_email_addr",
    "PRODUCTION_SENDGRID_FROM_EMAIL_ADDR": "@production.glider-ota.sendgrid_from_email_addr",
    "PRODUCTION_INFURA_ENDPOINT": "@production.glider-ota.infura_endpoint"
  }
}
